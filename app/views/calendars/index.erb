<h3 class="ui block header custom-header">
  Calendars
</h3>
<%= link_to "New Calendar", new_calendar_path %>
<br />
<div class="ui two column centered grid">
  <% calendars.each do |calendar| %>
    <div class="column">
      <div class="ui card">
        <div class="content">
          <div class="header">
            <%= calendar.name %>
          </div>
          <div class="meta">
            <%= calendar.description || time_ago_in_words(calendar.created_at) %>
          </div>
          <div class="description"></div>
        </div>
      </div>
    </div>
<% end %>
</div>
